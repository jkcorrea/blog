---
import clsx from "clsx";
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={clsx('w-full py-4 space-y-3', !noMarginTop && 'mt-auto')}>
  <Hr noPadding />
  <div class="flex flex-col sm:flex-row-reverse justify-between items-center">
    <Socials centered />
    <div class="my-2 flex flex-col sm:flex-row items-center whitespace-nowrap">
      <span>&#169; Jake Correa {currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>All rights reserved.</span>
    </div>
  </div>

  <div class="flex flex-col items-center">
    <span class="text-xs opacity-60">Template forked from the awesome <a class="underline" target="_blank" href="https://github.com/satnaing/astro-paper">Sat Naing</a></span>
  </div>
</footer>
